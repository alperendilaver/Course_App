@model Ogrenci
<h2>Ogrenci Güncelleme</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Ogrenci" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgrenciId">
            <div class="mb-3">
                <label class="form-label" asp-for="OgrenciAd">Ogrenci Adı</label>
                <input asp-for="OgrenciAd" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="OgrenciSoyad">Ogrenci Soyadı</label>
                <input asp-for="OgrenciSoyad" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="Eposta">E posta</label>
                <input asp-for="Eposta" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="Telefon">Telefon</label>
                <input asp-for="Telefon" class="form-control">
        
            </div>
        
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kurslar</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.KursKayitlari){
                <li>@item.kurs.Baslik</li>
            }
        </ul>
    </div>
</div>

