@model IEnumerable<Ogretmen>
    <h2>Ogretmen Listesi</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m=> m.OgretmenId)</th>
                
                <th>@Html.DisplayNameFor(m=> m.OgretmenAd)</th>
                
                <th>@Html.DisplayNameFor(m=> m.OgretmenSoyad)</th>
                <th style="width: 150px;"></th><!--Buton Kolonu-->
            </tr>
        </thead>
        <tbody>
            @foreach(var ogretmen in Model){
                <tr>
                    <td>@Html.DisplayFor(modelItem => ogretmen.OgretmenId)</td><!--DisplayFor içerideki değeri alır-->
                    <td>@Html.DisplayFor(modelItem => ogretmen.OgretmenAd)</td>
                    <td>@Html.DisplayFor(modelItem => ogretmen.OgretmenSoyad)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ogretmen.OgretmenId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ogretmen.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
    <a asp-action="Create" class="btn btn-primary">Ogretmen Ekle</a>