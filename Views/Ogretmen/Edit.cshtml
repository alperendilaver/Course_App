@model Ogretmen
<h2>Ogretmen Güncelleme</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label class="form-label" asp-for="OgretmenAd">Ogretmen Adı</label>
                <input asp-for="OgretmenAd" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="OgretmenSoyad">Ogrenci Soyadı</label>
                <input asp-for="OgretmenSoyad" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="Eposta">E posta</label>
                <input asp-for="Eposta" class="form-control">
        
            </div>
        
            <div class="mb-3">
                <label class="form-label" asp-for="Telefon">Telefon</label>
                <input asp-for="Telefon" class="form-control">
        
            </div>
        
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Kurslar</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.Kurslar){
                <li>@item.Baslik</li>
            }
        </ul>
    </div>
  
</div>

