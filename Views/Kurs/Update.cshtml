@model KursViewModel
<h2>Kurs Güncelle</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Update" method="post">
            <div asp-validation-summary="All"></div>
    
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">Başlık Giriniz</label>
                <input class="form-control" asp-for="Baslik">
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Ogretmen Seciniz</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-control">
                    <option value="">Seçiniz</option>
                </select>
            </div>
          
            <input type="hidden" asp-for="KursId">
            <button type="submit" class="btn btn-secondary">Kaydet</button>
        
        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.KursKayitlari){
                <li>@item.ogrenci.AdSoyad</li>
            }
        </ul>
    </div>
</div>
